<UserControl x:Class="UnrealProjectHub.Controls.ProjectOptionsButton"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="24"
             Width="24">

    <Grid>

        <Button x:Name="OptionsButton"
                Width="28"
                Height="28"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                Click="OpenPopup"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="0">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bg"
                            Background="#252526"
                            CornerRadius="10">

                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bg"
                                    Property="Background"
                                    Value="#2D2D30"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

            <TextBlock Text="⋯"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#AAA"
                       Margin="0,-1,0,0"/>
        </Button>

        <Popup x:Name="Popup"
               Placement="Bottom"
               PlacementTarget="{Binding ElementName=OptionsButton}"
               HorizontalOffset="-90"
               VerticalOffset="5"
               Margin="5"
               StaysOpen="False"
               AllowsTransparency="True"
               DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">

            <Border Background="#252526"
                    BorderBrush="#333"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="10, 8">

                <StackPanel>

                    <Button Content="Open IDE"
                            Style="{StaticResource PopupMenuButtonStyle}"
                            Command="{Binding OpenIdeCommand, ElementName=Root}"
                            CommandParameter="{Binding}" />

                    <Button Content="Show in Explorer"
                            Style="{StaticResource PopupMenuButtonStyle}"
                            Command="{Binding OpenInExplorerCommand, ElementName=Root}"
                            CommandParameter="{Binding}" />

                    <Separator/>

                    <Button Content="Rebuild &amp; Launch"
                            Style="{StaticResource PopupMenuButtonStyle}"
                            Command="{Binding RebuildAndLaunchCommand, ElementName=Root}"
                            CommandParameter="{Binding}" />

                    <Separator/>

                    <Button Content="Remove from List"
                            Style="{StaticResource PopupMenuButtonStyle}"
                            Foreground="#E06C75"
                            Command="{Binding RemoveProjectCommand, ElementName=Root}"
                            CommandParameter="{Binding}" />

                </StackPanel>

            </Border>
        </Popup>

    </Grid>
</UserControl>
