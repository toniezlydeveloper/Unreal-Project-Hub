<UserControl x:Class="UnrealProjectHub.Controls.LogsOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border x:Name="Root"
            Background="#111"
            BorderBrush="#333"
            BorderThickness="1"
            CornerRadius="6"
            Padding="6"
            VerticalAlignment="Bottom"
            Height="32">

        <Grid>

            <Grid x:Name="CollapsedView">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           x:Name="LastLogText"
                           FontFamily="Consolas"
                           FontSize="12"
                           Foreground="#D4D4D4"
                           TextTrimming="CharacterEllipsis"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Style="{StaticResource IconHoverButton}"
                        Click="ToggleOverlayExpansion"
                        Width="18"
                        Height="18">

                    <TextBlock Text="▲"
                               FontSize="12"
                               FontWeight="SemiBold"/>
                </Button>
            </Grid>

            <Grid x:Name="ExpandedView"
                  Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Logs"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#AAA"
                               VerticalAlignment="Center"/>

                    
                    <Button Grid.Column="1"
                            Style="{StaticResource IconHoverButton}"
                            Click="ToggleOverlayExpansion"
                            Width="18"
                            Height="18">

                        <TextBlock Text="▼"
                                   FontSize="12"
                                   FontWeight="SemiBold"/>
                    </Button>
                </Grid>

                <ScrollViewer x:Name="LogsScrollViewer"
                              Grid.Row="1"
                              Margin="0,6,0,0"
                              VerticalScrollBarVisibility="Auto">

                    <ItemsControl x:Name="LogsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           Foreground="#D4D4D4"
                                           Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </ScrollViewer>
            </Grid>

        </Grid>
    </Border>
</UserControl>
