<Application x:Class="UnrealProjectHub.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Color x:Key="UE_BG">#1E1E1E</Color>
        <Color x:Key="UE_PANEL">#252526</Color>
        <Color x:Key="UE_ACCENT">#0E639C</Color>
        <Color x:Key="UE_TEXT">#D4D4D4</Color>

        <SolidColorBrush x:Key="BgBrush" Color="{StaticResource UE_BG}" />
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource UE_PANEL}" />
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource UE_ACCENT}" />
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource UE_TEXT}" />
        
        <Style x:Key="SecondaryActionButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="PrimaryActionButton" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Application.Resources>
</Application>